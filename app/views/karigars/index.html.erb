<h3>Listing Karigars</h3>
<%= link_to 'New Karigar', new_karigar_path, :class => "btn btn-primary", :style => "float: right;margin-bottom: 10px;" %>

<table border="1" style="border-color: #BDBDBD;" width="100%">
  <thead>
    <tr style="background-color: darkgray;">
      <th width="25%">Name</th>
      <th width="25%">Address</th>
      <th width="25%">Phone</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @karigars.each do |karigar| %>
      <tr>
        <td><%= karigar.name %></td>
        <td><%= karigar.address %></td>
        <td><%= karigar.phone %></td>
        <td><%= link_to image_tag("detail.png", :title => "Details"), karigar %></td>
        <td><%= link_to image_tag("edit.png", :title => "Edit"), edit_karigar_path(karigar) %></td>
        <td><%= link_to image_tag("cross-icon.png", :title => "Delete"), karigar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

