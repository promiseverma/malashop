<%= stylesheet_link_tag "colorbox" %>
<%= javascript_include_tag "jquery.colorbox-min" %>
<script type="text/javascript">
  $(document).ready(function() {
    jQuery('a.gallery').colorbox({ 
      width: "800px" ,
      height: "700px",
      closeButton: true,
      opacity: 1.9,
      onClosed: function ()
        {
          location.reload();
        }
      });
  });
</script>
<p id="notice"><%= notice %></p>

<p>
  <strong>Product number:</strong>
  <%= @product.product_number %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong style ="float: left;">Image:</strong>
  <% @product.images.each do |image| %>
    <%= link_to image_tag(image.avatar.url(:thumb)), image.avatar.url, html_options = {:class => "gallery", :title => "Detail"  } %>&nbsp;
    <%= link_to 'Destroy', "/images/#{image.id}", :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
</p>
<br/><br/><br/><br/><br/><br/>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
