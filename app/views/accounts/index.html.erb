<h3>Listing accounts for <%= @customer.name %></h3>
<%= link_to 'New Entry', new_account_path, :class => "btn btn-primary", :style => "float: right;margin-bottom: 10px;" %>
<table border="1" style="border-color: #BDBDBD;" width="100%">
  <thead>
    <tr style="background-color: darkgray;">
      <th width="15%" >Transaction date</th>
      <th width="15%" >Particular</th>
      <th width="15%" >Debit</th>
      <th width="15%" >Credit</th>
      <th width="15%" >Customer</th>
      <th colspan="3" width="15%" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.transaction_date %></td>
        <td><%= account.particular %></td>
        <td><%= account.debit %></td>
        <td><%= account.credit %></td>
        <td><%= account.customer.name %></td>
        <td><%= link_to image_tag("detail.png", :title => "Details"), account_path( account) %></td>
        <td><%= link_to image_tag("edit.png", :title => "Edit"), edit_account_path(account) %></td>
        <td><%= link_to image_tag("cross-icon.png", :title => "Delete"), account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>