<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-12 form-inline2">
    <%= f.input :transaction_date, :class => "form-control" %>
    </div>
    </div>
    <%= f.input :particular %>
    <%= f.input :debit %>
    <%= f.input :credit %>
    <% if !@account.persisted? %>
    <%= f.association :customer, :selected => @customer.id, :readonly => true %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
