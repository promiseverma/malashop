<%= simple_form_for(@material) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :unit, collection: get_unit,prompt: "Select unit", :onchange => show_piece %>
    <%= f.input :piece_count, :placeholder => 'Piece', :class => "hideelem" %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
