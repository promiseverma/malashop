<h3>Listing Customers</h3>
<%= link_to 'New Customer', new_customer_path , :class => "btn btn-primary", :style => "float: right;margin-bottom: 10px;" %>
<table  border="1" style="border-color: #BDBDBD;" width="100%">
  <thead>
    <tr  style="background-color: darkgray;">
      <th width="20%">Name</th>
      <th width="20%">Address</th>
      <th width="20%">Phone</th>
      <th width="20%">Email</th>
      <th colspan="3" width="20%">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, accounts_path(customer) %></td>
        <td><%= customer.address %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to image_tag("detail.png", :title => "Details"), customer %></td>
        <td><%= link_to image_tag("edit.png", :title => "Edit"), edit_customer_path(customer) %></td>
        <td><%= link_to image_tag("cross-icon.png", :title => "Delete"), customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @customers %>
  </div>
  <%= will_paginate @customers, :container => false %>
</div>
<br>

